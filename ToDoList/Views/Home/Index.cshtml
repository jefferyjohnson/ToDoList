@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <img src="~/images/gystapp_assets-01.png" alt="GYST Logo" width="300" height="300" />
    <p>Get Your Sh*t Together.</p>
    <a asp-action="Create" class="btn btn-success">Add New Task</a>

    <h1>To Do:</h1>
    @if (Model.ToDoTasks != null)
    {
        <ul>
            @foreach (var item in Model.ToDoTasks)
            {
                <li>@item.Content
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="margin-left:10px;">Start</a>

                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this task?');">
                        <button type="submit" class="btn btn-danger" style="margin-left:5px;">Delete</button>
                    </form>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No tasks to do.</p>
    }

    <h1>Pending:</h1>
    @if (Model.InProgressTasks != null)
    {
        <ul>
            @foreach (var item in Model.InProgressTasks)
            {
                <li>
                    @item.Content                    
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary" style="margin-left:10px;">Complete</a>

                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this task?');">
                        <button type="submit" class="btn btn-danger" style="margin-left:5px;">Delete</button>
                    </form>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No tasks in progress.</p>
    }

    <h1>Completed:</h1>
    @if (Model.CompletedTasks != null)
    {
        <ul>
            @foreach (var item in Model.CompletedTasks)
            {
                <li>@item.Content
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this task?');">
                        <button type="submit" class="btn btn-danger" style="margin-left:5px;">Delete</button>
                    </form>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No tasks completed.</p>
    }

    
</div>
